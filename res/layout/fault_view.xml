<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/moveMent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:text="@string/moveMent"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/movementSpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/moveMent"
        android:layout_alignLeft="@+id/zoneWidthEt"
        android:layout_alignTop="@+id/moveMent" />

    <TextView
        android:id="@+id/strike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/moveMent"
        android:layout_marginTop="21dp"
        android:text="@string/trend"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/sepTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/strike"
        android:ems="5"
        android:hint="@string/sepHint" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sepTxt"
        android:layout_alignParentLeft="true"
        android:text="@string/sepMark"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/zoneWidthEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/strike"
        android:layout_alignParentRight="true"
        android:ems="5"
        android:inputType="number" >
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:text="@string/markerOffset"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/offset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toLeftOf="@+id/offsetUnitsSpn"
        android:layout_toRightOf="@+id/textView3"
        android:ems="3"
        android:inputType="number" >

    </EditText>

    <Spinner
        android:id="@+id/offsetUnitsSpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/offset"
        android:layout_alignLeft="@+id/sepTxt"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/piercingPt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="20dp"
        android:text="@string/piercingPt"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/piercingPtEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/piercingPt"
        android:layout_alignLeft="@+id/offsetUnitsSpn"
        android:layout_alignParentRight="true"
        android:ems="10" >
    </EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/piercingPt"
        android:layout_marginTop="21dp"
        android:text="@string/netSlip"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/netSlipEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/offset"
        android:layout_toLeftOf="@+id/piercingPtEt"
        android:ems="10"
        android:inputType="number" >
    </EditText>

    <Spinner
        android:id="@+id/netSlipUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/netSlipEt"
        android:layout_alignLeft="@+id/offsetUnitsSpn"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="23dp"
        android:text="@string/mineralization"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/mineralizationEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/piercingPtEt"
        android:layout_alignParentRight="true"
        android:ems="10" >
    </EditText>

    <ImageButton
        android:id="@+id/doneBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="29dp"
        android:background="#0000"
        android:src="@drawable/ic_done" />

</RelativeLayout>
