<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
     android:fillViewport="true">


	<LinearLayout 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" >

		    <TextView
		        android:id="@+id/limbAngleTv"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        android:layout_marginTop="22dp"
		        android:text="@string/moveMent"
		        android:textAppearance="?android:attr/textAppearanceMedium" />

		    <Spinner
		        android:id="@+id/movementSpn"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		   	    style="@android:style/Widget.Spinner" 
		        android:layout_below="@+id/limbAngleTv" />

		    <TextView
		        android:id="@+id/limbsTv"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/sepTxt"
		        android:layout_marginTop="20dp"
		        android:text="@string/markerOffset"
		        android:textAppearance="?android:attr/textAppearanceMedium" />

		    <EditText
		        android:id="@+id/offset"
		        style="@style/geo_edit_text"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/limbsTv"
		        android:layout_toLeftOf="@+id/offsetUnitsSpn"
		        android:ems="3"
		        android:inputType="number" />

		    <Spinner
		        android:id="@+id/offsetUnitsSpn"
		        style="@android:style/Widget.Spinner"
		        android:layout_width="160dp"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/offset"
		        android:layout_alignParentRight="true"
		        android:layout_alignTop="@+id/offset" />

		    <TextView
		        android:id="@+id/piercingPt"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/offset"
		        android:layout_marginTop="20dp"
		        android:text="@string/piercingPt"
		        android:textAppearance="?android:attr/textAppearanceMedium" />

		    <EditText
		        android:id="@+id/piercingPtEt"
		        style="@style/geo_edit_text"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:layout_alignParentRight="true"
		        android:layout_below="@+id/piercingPt"
		        android:ems="10"
		        android:hint="@string/piercingPt" />

		    <TextView
		        android:id="@+id/textView4"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/piercingPtEt"
		        android:layout_marginTop="21dp"
		        android:text="@string/netSlip"
		        android:textAppearance="?android:attr/textAppearanceMedium" />

		    <EditText
		        android:id="@+id/netSlipEt"
		        style="@style/geo_edit_text"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:layout_below="@+id/textView4"
		        android:layout_toLeftOf="@+id/netSlipUnits"
		        android:ems="10"
		        android:inputType="number" />

		    <Spinner
		        android:id="@+id/netSlipUnits"
		        style="@android:style/Widget.Spinner"
		        android:layout_width="160dp"
		        android:layout_height="80dp"
		        android:layout_alignBottom="@+id/netSlipEt"
		        android:layout_alignLeft="@+id/offsetUnitsSpn"
		        android:layout_alignTop="@+id/netSlipEt"
		        android:layout_marginLeft="16dp" />

		    <TextView
		        android:id="@+id/textView5"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/netSlipUnits"
		        android:layout_marginTop="23dp"
		        android:text="@string/mineralization"
		        android:textAppearance="?android:attr/textAppearanceMedium" />

		    <EditText
		        android:id="@+id/mineralizationEt"
		        style="@style/geo_edit_text"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
				android:layout_alignParentRight="true"
		        android:layout_below="@+id/textView5"
		        android:ems="10"
		        android:hint="@string/mineralization" />

		    <ImageButton
		        android:id="@+id/doneBtn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/mineralizationEt"
		        android:layout_marginTop="29dp"
		        android:background="#0000"
		        android:contentDescription="@string/done"
		        android:src="@drawable/ic_done" />

		    <EditText
		        android:id="@+id/sepTxt"
		        style="@style/geo_edit_text"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/hingeTv"
		        android:layout_marginTop="18dp"
		        android:ems="10"
		        android:hint="@string/sepHint" />

		    <TextView
		        android:id="@+id/hingeTv"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/zoneWidthEt"
		        android:layout_marginTop="16dp"
		        android:text="@string/sepMark"
		        android:textAppearance="?android:attr/textAppearanceMedium" />

		    <EditText
		        android:id="@+id/zoneWidthEt"
		        android:layout_width="fill_parent"
		        style="@style/geo_edit_text"
		        android:layout_height="50dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/strike"
		        android:layout_marginTop="17dp"
		        android:ems="10"
		        android:hint="@string/trend"
		        android:inputType="number" />

		    <TextView
		        android:id="@+id/strike"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/movementSpn"
		        android:layout_marginTop="16dp"
		        android:text="@string/trend"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		</RelativeLayout>
            
    </LinearLayout>
</ScrollView>
