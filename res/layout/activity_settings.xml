<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserDetails" >

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="72dp"
        android:text="@string/nameEt" 
        style="@android:style/TextAppearance.Large"/>

    <TextView
        android:id="@+id/toAddrTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameTV"
        android:layout_below="@+id/nameTV"
        android:layout_marginTop="44dp"
        style="@android:style/TextAppearance.Large"
        android:text="@string/emailTV" />

    <TextView
        android:id="@+id/ccAddrTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/toAddrTv"
        android:layout_centerVertical="true"
        style="@android:style/TextAppearance.Large"
        android:text="@string/emailCcTv" />

    <EditText
        android:id="@+id/settingUsrNameEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nameTV"
        android:layout_alignBottom="@+id/nameTV"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/ccAddrTv"
        android:ems="10"
        android:inputType="textPersonName" >
    </EditText>

    <EditText
        android:id="@+id/emailToEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toAddrTv"
        android:layout_alignLeft="@+id/settingUsrNameEt"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/emailccEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ccAddrTv"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/ccAddrTv"
        android:ems="10"
        android:inputType="textEmailAddress" />
    
</RelativeLayout>
    