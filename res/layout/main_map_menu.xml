<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/compass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/newSite"
        android:layout_toRightOf="@+id/newSite"
        android:background="#0000"
        android:src="@drawable/ic_report" />


    <ImageButton
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#0000"
        android:src="@drawable/ic_done" />

    <ImageButton
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/done"
        android:layout_toRightOf="@+id/done"
        android:background="#0000"
        android:src="@drawable/ic_cancel" />

    <ImageButton
        android:id="@+id/newSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cancel"
        android:layout_toRightOf="@+id/cancel"
        android:background="#0000"
        android:src="@drawable/ic_plus" />
    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/compass"
        android:background="#0000"
        android:src="@drawable/ic_main_settings" />

    <Spinner
        android:id="@+id/mainMapSrc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/compass"
        android:layout_toLeftOf="@+id/settings"
        android:layout_toRightOf="@+id/compass" />

</RelativeLayout>
