<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.geoassist.SettingsActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/settingUsrNameEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nameTV"
        android:layout_alignBottom="@+id/nameTV"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/ccAddrTv"
        android:ems="10"
        android:inputType="textPersonName" >
    </EditText>

<!--     <EditText -->
<!--         android:id="@+id/emailToEt1" -->
<!--         android:layout_width="wrap_content" -->
<!--         android:layout_height="wrap_content" -->
<!--         android:layout_alignBottom="@+id/toAddrTv" -->
<!--         android:layout_alignLeft="@+id/settingUsrNameEt" -->
<!--         android:layout_alignParentRight="true" -->
<!--         android:ems="10" -->
<!--         android:inputType="textEmailAddress" /> -->

    <EditText
        android:id="@+id/emailToEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toAddrTv"
        android:layout_alignLeft="@+id/settingUsrNameEt"
        android:ems="10"
        android:inputType="textEmailAddress" />
    
    <EditText
        android:id="@+id/emailccEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ccAddrTv"
        android:layout_alignRight="@+id/emailToEt"
        android:layout_toRightOf="@+id/ccAddrTv"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/nameTV"
        style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="81dp"
        android:text="@string/nameEt" />

    <TextView
        android:id="@+id/toAddrTv"
        style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameTV"
        android:layout_below="@+id/settingUsrNameEt"
        android:layout_marginTop="38dp"
        android:text="@string/emailTV" />

    <TextView
        android:id="@+id/ccAddrTv"
        style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/toAddrTv"
        android:layout_below="@+id/emailToEt"
        android:layout_marginTop="42dp"
        android:text="@string/emailCcTv" />
    
</RelativeLayout>