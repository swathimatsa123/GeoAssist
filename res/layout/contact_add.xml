<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
     android:fillViewport="true">


	<LinearLayout 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" >

		    <TextView
		        android:id="@+id/contact1Tv"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        android:text="@string/contact1"
		        android:textAppearance="?android:attr/textAppearanceMedium" />

		    <EditText
		        android:id="@+id/contact1Et"
		        style="@style/geo_edit_text"
		        android:layout_height="50dp"
		        android:layout_width="fill_parent"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/contact1Tv"
		        android:layout_marginTop="20dp"
		        android:ems="10"
		        android:hint="@string/contact1"
		        android:inputType="text" />

		    <EditText
		        android:id="@+id/contact2Et"
		        style="@style/geo_edit_text"
		        android:layout_height="50dp"
		        android:layout_width="fill_parent"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/contact2Tv"
		        android:layout_marginTop="20dp"
		        android:ems="10"
		        android:hint="@string/contact2"
		        android:inputType="text" />

		    <TextView
		        android:id="@+id/notesTv"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/boundarySpn"
		        android:layout_marginTop="19dp"
		        android:text="@string/notes"
		        android:textAppearance="?android:attr/textAppearanceMedium" />

		    <EditText
		        android:id="@+id/notes"
		        style="@style/geo_edit_text"
		        android:layout_height="100dp"
		        android:layout_width="fill_parent"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/notesTv"
		        android:layout_marginTop="16dp"
		        android:background="@drawable/rect_text_edit"
		        android:ems="10"
		        android:hint="@string/notes"
		        android:gravity="top|left"
		        android:inputType="textMultiLine"
		        android:lines="5"
		        android:padding="10dp"
		        android:scrollHorizontally="false"
		        android:textColor="@android:color/black"
		        android:textCursorDrawable="@null" >
		    </EditText>

		    <TextView
		        android:id="@+id/contact2Tv"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/contact1Et"
		        android:layout_marginTop="15dp"
		        android:text="@string/contact2"
		        android:textAppearance="?android:attr/textAppearanceMedium" />

		    <Spinner
		        android:id="@+id/boundarySpn"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/contactBoundary"
   	    		style="@android:style/Widget.Spinner" 
		        android:layout_marginTop="16dp" />

		    <TextView
		        android:id="@+id/contactBoundary"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/contactTypeSpn"
		        android:layout_marginTop="15dp"
		        android:text="@string/contactBoundary"
		        android:textAppearance="?android:attr/textAppearanceMedium" />

		    <Spinner
		        android:id="@+id/contactTypeSpn"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/contactType"
		   	    style="@android:style/Widget.Spinner" 
		        android:layout_marginTop="20dp" />

			<TextView
		        android:id="@+id/trendTv"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/contact2Et"
		        android:layout_marginTop="16dp"
		        android:text="@string/trend"
		        android:textAppearance="?android:attr/textAppearanceMedium" />	    
		    
		    <EditText
		        android:id="@+id/trendEt"
		        style="@style/geo_edit_text"
		        android:layout_height="50dp"
		        android:layout_width="fill_parent"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/trendTv"
		        android:layout_marginTop="20dp"
		        android:ems="10"
		        android:hint="@string/trend"
		        android:inputType="text" />
			
			<TextView
		        android:id="@+id/contactType"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/trendEt"
		        android:layout_marginTop="16dp"
		        android:text="@string/contactType"
		        android:textAppearance="?android:attr/textAppearanceMedium" />

		</RelativeLayout>
            
    </LinearLayout>
</ScrollView>
