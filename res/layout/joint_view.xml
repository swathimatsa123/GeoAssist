<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/strike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:text="@string/strikeTxt"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/strikeEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="5"
        android:inputType="number" >
    </EditText>

    <TextView
        android:id="@+id/dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/strike"
        android:layout_marginTop="21dp"
        android:text="@string/dipTxt"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/dipEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dip"
        android:layout_alignLeft="@+id/strikeEt"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/spacing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dip"
        android:layout_marginTop="21dp"
        android:text="@string/spacing"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/spacingEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spacing"
        android:layout_alignLeft="@+id/dipEt"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="number" >
    </EditText>

    <TextView
        android:id="@+id/beddingType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spacing"
        android:layout_marginTop="22dp"
        android:text="@string/beddingType"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/beddingSpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/beddingType"
        android:layout_alignLeft="@+id/spacingEt"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/foldType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/beddingType"
        android:layout_marginTop="16dp"
        android:text="@string/foldType"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/foldTypeSpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/foldType"
        android:layout_alignLeft="@+id/beddingSpn"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:id="@+id/doneBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/foldType"
        android:layout_marginTop="23dp"
        android:background="#0000"
        android:contentDescription="@string/done"
        android:src="@drawable/ic_done" />

</RelativeLayout>
