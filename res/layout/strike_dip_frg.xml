<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 		<TextView
			        android:id="@+id/strike"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_alignParentTop="true"
			        android:layout_marginTop="14dp"
			        android:text="@string/strikeTxt"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
		
		    <EditText
		        android:id="@+id/strikeEt"
		        style="@style/geo_edit_text"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:layout_below="@+id/strike"
		        android:layout_toLeftOf="@+id/strRecordBtn"
		        android:inputType="number" >

		    </EditText>
		    
		    <TextView
			        android:id="@+id/dip"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/strikeEt"
			        android:layout_marginTop="21dp"
			        android:text="@string/dipTxt"
			        android:textAppearance="?android:attr/textAppearanceMedium" />

		    <EditText
		        android:id="@+id/dipEt"
		        style="@style/geo_edit_text"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:layout_alignParentLeft="true"
		        android:layout_alignRight="@+id/strikeEt"
		        android:layout_below="@+id/dip"
		        android:ems="10"
		        android:inputType="number" >

    		</EditText>

			<ImageButton
			    android:id="@+id/strRecordBtn"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_above="@+id/dip"
			    android:layout_alignParentRight="true"
			    android:background="#0000"
			    android:contentDescription="@string/done"
			    android:src="@drawable/record" />

			<ImageButton
			    android:id="@+id/dipRecordBtn"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignBottom="@+id/dipEt"
			    android:layout_alignParentRight="true"
			    android:background="#0000"
			    android:contentDescription="@string/done"
			    android:src="@drawable/record" />
		    
</RelativeLayout>
