<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".IgneousMineral" >

    <EditText
        android:id="@+id/dikeStrikeEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dikeStrikeTv"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/dikeStrikeTv" />

    <EditText
        android:id="@+id/dikeDipEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dikeDipTv"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/dikeDipTv" />

    <EditText
        android:id="@+id/mineralNameEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dikeAttitudeTv"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/dikeAttitudeTv"
        android:ems="10" >
    </EditText>

    <TextView
        android:id="@+id/minGrainSizeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mineralNameEt"
        android:layout_marginTop="24dp"
        android:text="@string/minGrainSize"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/minGrainSizeEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/minGrainSizeTv"
        android:layout_alignLeft="@+id/dikeCompositionSpn"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/maxGrainSizeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/minGrainSizeTv"
        android:layout_below="@+id/minGrainSizeTv"
        android:layout_marginTop="34dp"
        android:text="@string/maxGrainSize"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/maxGrainSizeEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/maxGrainSizeTv"
        android:layout_alignRight="@+id/minGrainSizeEt"
        android:layout_toRightOf="@+id/mineralNameTv"
        android:ems="10"
        android:inputType="number" >
    </EditText>

    <TextView
        android:id="@+id/dikeDipTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dikeStrikeTv"
        android:layout_marginTop="24dp"
        android:text="@string/dipTxt"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/dikeStrikeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:text="@string/strikeTxt"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/dikeAttitudeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dikeDipEt"
        android:layout_marginTop="32dp"
        android:text="@string/attitude"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/dikeComposition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/maxGrainSizeTv"
        android:layout_below="@+id/maxGrainSizeTv"
        android:layout_marginTop="32dp"
        android:text="@string/composition"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/dikeCompositionSpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dikeComposition"
        android:layout_toRightOf="@+id/maxGrainSizeTv" />

    <ImageButton
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ic_done" />

</RelativeLayout>