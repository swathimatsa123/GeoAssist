<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/siteLngEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/longitude"
        android:layout_alignLeft="@+id/siteNumEt"
        android:layout_alignParentRight="true"
        android:inputType="number"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/projLat"
        android:layout_below="@+id/projLat"
        android:layout_marginTop="34dp"
        android:gravity="center_horizontal"
        android:text="@string/longitude"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/siteLatEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/projLat"
        android:layout_alignLeft="@+id/siteNumEt"
        android:layout_alignRight="@+id/siteLngEt"
        android:ems="10"
        android:inputType="number"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/projLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        android:text="@string/lattitude"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/siteNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/siteLngEt"
        android:layout_marginTop="24dp"
        android:text="@string/siteNum"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/siteNumEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/siteNum"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="numberSigned" />

    <ImageButton
        android:id="@+id/doneBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/siteNum"
        android:layout_below="@+id/siteNum"
        android:layout_marginTop="27dp"
        android:background="#0000"
        android:src="@drawable/ic_done" />

</RelativeLayout>
